<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TotalSugarFragment">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="392dp"
        android:layout_height="224dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/totalsugar"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Şeker"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="410dp"
        android:layout_height="200dp"
        android:layout_marginBottom="103dp"
        android:gravity="center"
        android:padding="3dp"
        android:text="Meyve ve süt gibi bazı yiyecekler doğal olarak şeker içerir. Öte yandan, atıştırmalık yiyecekler, şeker ve soda genellikle ilave şeker içerir. Eklenen şekerler, önemli besin maddeleri olmadan kalori ekler. Amerikalılar için 2020 Diyet Yönergeleri, eklenen şekerlerden alınan kalorilerin günlük kalorilerin %10'undan daha azıyla sınırlandırılmasını önermektedir. 2.000 kalorilik bir diyet için bu, günde 50 gramdan az ilave şeker demektir."
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>